<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
<!--<suite name="Smoke_Tests" verbose="2" allow-return-values="true" configfailurepolicy="continue">-->
  <suite name="Smoke_Tests" parallel="methods" thread-count="4" verbose="2" allow-return-values="true" configfailurepolicy="continue">
    <test name="Suite_Smoke" preserve-order="true"> <!-- allow-return-value can be in both suite and test, but leave only one of them -->
        <groups>
            <run>
                <exclude name="combo" />
                <exclude name="ticketsOnly" />
                <include name="registration" />
                <exclude name="roomOnly" />
                <exclude name="vacationPackage" />
                <exclude name="profile" />
                <exclude name="dine" />
            </run>
        </groups>
        <classes>
            <!-- Package.class -->
            <class name="com.orasi.test.suite.Suite_Smoke" />
        </classes>
    </test>

</suite>